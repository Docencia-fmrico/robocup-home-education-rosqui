<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <SequenceStar>
            <SequenceStar>
                <Action ID="DetectLuggage" bag_pos="{bag_pos}" color="{color}"/>
                <Action ID="GoToBag" bag_pos="{bag_pos}" color="{color}"/>
                <ReactiveSequence>
                    <Fallback>
                        <Action ID="PercievePerson" person_x="{person_x}" person_z="{person_z}"/>
                        <Action ID="Turn"/>
                    </Fallback>
                    <Action ID="FollowPerson" person_x="{person_x}" person_z="{person_z}"/>
                </ReactiveSequence>
            </SequenceStar>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="DetectLuggage">
            <input_port name="bag_pos"/>
            <input_port name="color"/>
        </Action>
        <Action ID="FollowPerson">
            <output_port name="person_x"/>
            <output_port name="person_z"/>
        </Action>
        <Action ID="GoToBag">
            <output_port name="bag_pos"/>
            <output_port name="color"/>
        </Action>
        <Action ID="PercievePerson">
            <input_port name="person_x"/>
            <input_port name="person_z"/>
        </Action>
        <Action ID="Turn"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

